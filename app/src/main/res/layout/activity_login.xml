<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="102dp"
            android:layout_height="102dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/img"
            android:layout_margin="24dp"
            android:src="@drawable/app_logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#484848"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="24dp"
            android:id="@+id/txt_top"
            app:layout_constraintTop_toBottomOf="@id/img"
            android:text="Your financial voyage begins here, where every investment opens doors to a wealth of opportunities and growth."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to growing !"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/txt_welcome"
            app:layout_constraintTop_toBottomOf="@id/txt_top"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile no"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/txt_mob_no"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_welcome"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:paddingVertical="12dp"
            android:hint="Enter Mobile No"
            android:id="@+id/edt_mob"
            android:paddingHorizontal="45dp"
            app:layout_constraintTop_toBottomOf="@id/txt_mob_no"
            android:background="@drawable/ic_mobile_back"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:cornerRadius="16dp"
            android:id="@+id/btn_otp"
            android:backgroundTintMode="add"
            app:layout_constraintTop_toBottomOf="@id/edt_mob"
            android:background="@color/colorPrimary"
            android:text="GET OTP"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:id="@+id/lin_or"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_otp">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txt_or"
                android:background="#E3E3E3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_or"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="or"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_or"
                android:background="#E3E3E3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Continue with google"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            android:id="@+id/btn_google"
            android:background="#F3F3F3"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/lin_or"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="Continue with facebook"
            app:icon="@drawable/ic_facebook"
            android:textSize="16sp"
            app:iconGravity="textStart"
            android:id="@+id/btn_facebook"
            android:background="#F3F3F3"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/btn_google"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_facebook">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="donâ€™t have an account? "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Signup here"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
